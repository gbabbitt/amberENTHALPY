<MyLayout>
    GridLayout:
        cols:1
        size: root.width-200, root.height-200
        pos: 100, 100
        Label:
            text: 'amberENTHALPY - molecular dynamics for binding enthalpy'
            font_size: 22
            size_hint: 0.5, 0.2
            bold: True
            color: 0.1, 0.8, 0.1, 1
        Label:
            text: 'GPL3 license - GA Babbitt Lab at Rochester Institute of Technology'
            font_size: 16
            size_hint: 0.3, 0.1    
        GridLayout:
            cols:1
            Image:
                source: 'bind.png'
            GridLayout:
                cols:1
                ToggleButton:
                    id: btn00
                    text: "single GPU mode - (run MD simulations sequentially on same GPU card)"
                    bold: True
                    state: 'normal'
                    on_state: root.btn00()
                    off_state: root.btn00()
                    size_hint: 0.5, 0.3
                    color: 0.9, 0.7, 0.1, 1
                    
                ToggleButton:
                    id: btn0
                    text: "dual GPU mode - (split MD simulation jobs to 2 independent GPU cards)"
                    bold: True
                    state: 'normal'
                    on_state: root.btn0()
                    off_state: root.btn00()
                    size_hint: 0.5, 0.3
                    color: 0.9, 0.7, 0.1, 1
                Label:
                    text: ''
                    font_size: 16
                    size_hint: 0.3, 0.1    
                GridLayout:
                    cols:1 
                    Button:
                        id: btn1
                        font_size: 40
                        text: "run MD simulations"
                        on_press: btn1.background_color=(0.9, 0.9, 0.1, 1)
                        on_press: root.btn1()
                    
                        
                    